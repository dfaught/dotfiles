# dev session
#

neww -n "Libraries"
send-keys -t "Libraries" 'wd ssf' C-m
send-keys -t '. ./set-env.sh' C-m

neww -n "Project"
send-keys -t "Project" 'wd ssf' C-m
splitw -h -p 25 -t 0 
send-keys -t 1 'wd ssf' C-m

neww -n "Thirdparty"
send-keys -t "Libraries" 'wd ssf' C-m
send-keys -t '. ./set-env.sh' C-m

neww -n "Build"
splitw -h -p 50 -t 0 
send-keys -t 0 'wd ssf' C-m
send-keys -t 1 'wd ssf' C-m
send-keys -t 1 '. ./set-env.sh' C-m

neww -n "Debug"
splitw -h -p 50
select-pane -t 1
splitw -v -p 50
select-pane -t 1
splitw -h -p 50
select-pane -t 0
send-keys -t 0 'wd ssf' C-m
send-keys -t 1 'wd ssf' C-m
send-keys -t 2 'wd ssf' C-m
send-keys -t 3 'wd ssf' C-m
send-keys -t 4 'wd ssf' C-m

neww -n Dev
splitw -h -p 40 -t 0 
select-pane -t 1
splitw -v -p 50
select-pane -t 0
send-keys -t 0 'wd ssd' C-m
send-keys -t 1 'wd ssf' C-m
send-keys -t 2 'wd ssd' C-m

neww -n Tools
send-keys -t "Tools" 'wd ssf' C-m
send-keys -t "Tools" 'cd ./Tools' C-m

neww -n Remote
splitw -h -p 50 -t 0 
selectw -t 1

renamew "Modules"
send-keys -t "Modules" 'wd ssf' C-m
send-keys -t "Modules" '. ./set-env.sh' C-m

