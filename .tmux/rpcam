# dev session
#

neww -n "CamCloud"
send-keys -t "CamCloud" 'wd rpwt' C-m
send-keys -t "CamCloud" '. ./set-env.sh' C-m

neww -n "HikVision"
send-keys -t "HikVision" 'wd rpwt' C-m
send-keys -t "HikVision" '. ./set-env.sh' C-m

neww -n "RPCom"
send-keys -t "RPCam" 'wd rpwt' C-m
send-keys -t "RPCam" '. ./set-env.sh' C-m

neww -n "RPCam"
send-keys -t "RPCam" 'wd rpwt' C-m
send-keys -t "RPCam" '. ./set-env.sh' C-m

neww -n "Build"
splitw -h -p 50 -t 0
send-keys -t 0 'wd rpwt' C-m
send-keys -t 0 '. ./set-env.sh' C-m
send-keys -t 1 'wd rpwt' C-m
send-keys -t 1 '. ./set-env.sh' C-m

neww -n Debug
splitw -h -p 40
select-pane -t 2
splitw -v -p 50
select-pane -t 1
splitw -h -p 50
select-pane -t 0
splitw -h -p 50
send-keys -t 0 'wd rpwt' C-m
send-keys -t 1 'wd rpwt' C-m
send-keys -t 1 'tty' C-m
send-keys -t 2 'wd rpwt' C-m
send-keys -t 3 'wd rpwt' C-m
send-keys -t 4 'wd rpwt' C-m

neww -n Tools
send-keys -t "Tools" 'wd rpwt' C-m

neww -n Remote
send-keys -t "Remote" 'wd rpwt' C-m

selectw -t 1
renamew "Project"
send-keys -t "Project" 'wd rpwt' C-m
send-keys -t "Project" '. ./set-env.sh' C-m
splitw -h -p 25 -t 0
send-keys -t 1 'wd rpwt' C-m
