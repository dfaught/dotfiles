# Example for a user configuration file

# Set default values for all following accounts.
defaults
#tls_trust_file /etc/ssl/certs/ca-certificates.crt
#tls_starttls off
logfile ~/.msmtp.log

#Work
account Work
tls off
tls_starttls off
tls_certcheck off
host localhost
port 1025
from derek.faught@rocketgaming.com
auth plain
user CORPORATE\derek.faught
passwordeval cd ~/.mail-config/.mutt && python2 -c 'import offlineimap; print(offlineimap.get_password("system", "work"))'

# Personal
account Personal
host mail.privateemail.com
tls on
tls_starttls off
tls_trust_file /etc/ssl/cert.pem
tls_certcheck on
from derek@derekfaught.com
auth on
user derek@derekfaught.com
passwordeval cd ~/.mail-config/.mutt && python2 -c 'import offlineimap; print(offlineimap.get_password("system", "derek@derekfaught.com"))'

# FamilyMail
account FamilyMail
host smtp.zoho.com
tls on
tls_starttls on
tls_trust_file /etc/ssl/cert.pem
port 587
from dfaught@family-mail.us
auth on
user dfaught@family-mail.us
passwordeval cd ~/.mail-config/.mutt && python2 -c 'import offlineimap; print(offlineimap.get_password("system", "dfaught@family-mail.us"))'

# Set a default account
account default : Personal
