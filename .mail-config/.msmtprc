# Example for a user configuration file

# Set default values for all following accounts.
defaults
#tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.msmtp.log

#Work
account Work
tls off
tls_starttls off
tls_certcheck off
host localhost
port 1025
from derek.faught@rocketgaming.com
auth plain
user CORPORATE\derek.faught
passwordeval cd ~/.mail-config/.mutt && python -c 'import offlineimap; print(offlineimap.get_password("system", "work"))'

# Personal
account Personal
host mail.derekfaught.com
tls on
tls_starttls on
tls_certcheck off
from derek@derekfaught.com
auth on
user derek@derekfaught.com
#passwordeval ~/.mail-config/offlineimap.py system derek@derekfaught.com
passwordeval cd ~/.mail-config/.mutt && python -c 'import offlineimap; print(offlineimap.get_password("system", "derek@derekfaught.com"))'

